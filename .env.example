# Gemini API Configuration
GOOGLE_API_KEY=your_gemini_api_key_here

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_PROJECT_ID=invoice-processor-app
FIREBASE_STORAGE_BUCKET=invoice-processor-app.firebasestorage.app
FIREBASE_APP_ID=your_firebase_app_id_here
FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id_here

# Application Settings
MAX_FILE_SIZE=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf
MAX_CONTENT_LENGTH=6291456
GEMINI_TIMEOUT=30
TOTAL_REQUEST_TIMEOUT=35

# Vercel Environment Settings
PYTHONUNBUFFERED=1
PYTHON_VERSION=3.9
NODE_VERSION=18.x

# Security Settings
CORS_ORIGINS=*  # For development, restrict in production
UPLOAD_FOLDER=/tmp/uploads  # Vercel uses /tmp for temporary storage

# Optional Development Settings
FLASK_ENV=development  # Change to 'production' for deployment
FLASK_DEBUG=0  # Change to 0 for deployment